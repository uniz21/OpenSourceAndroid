<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
    <style name="Text" />

    <style name="Text.Description">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SampleProgress">
        <item name="android:layout_width">@dimen/content_width</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="SampleProgress.Thin">
        <item name="android:layout_width">@dimen/content_width</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="SampleProgress.Fat">
        <item name="android:layout_width">@dimen/content_width</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="SampleProgress.Icon">
        <item name="android:layout_width">@dimen/content_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SampleProgress.Indeterminate">
        <item name="android:layout_width">@dimen/content_width</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="SampleButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>
</resources>
